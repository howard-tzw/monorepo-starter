{
	"compilerOptions": {
		"sourceMap": true,
		"module": "es2015",
		"target": "es2018",
		"moduleResolution": "node",
		"outDir": "./dist",
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"noEmit": true,
		"esModuleInterop": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@monorepo/shared": ["./src"]
		}
	},
	"exclude": ["node_modules"]
}
